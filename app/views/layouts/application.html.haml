!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type" }
    %meta{ :content => "text/javascript", "http-equiv" => "content-script-type" }

    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    <!--[if lt IE 8]>
    = stylesheet_link_tag 'ie.css'
    <![endif]-->
    = stylesheet_link_tag 'plugins/tabs/screen.css', '/facebox/facebox.css', 'application.css'
    = javascript_include_tag 'jquery-1.4.2', 'jquery.livequery', '/facebox/facebox', 'application'
    - javascript_tag do
      var _gaq = _gaq || []; \
      _gaq.push(['_setAccount', 'UA-12119177-2']); \
      _gaq.push(['_trackPageview']); \
      (function() { \
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true; \
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js'; \
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s); \
      })();

  %body
    #header
      .container
        = render :partial => 'shared/login'
        = render :partial => 'shared/navigation'

    #main-content
      = image_tag 'logo.jpg', :style => 'float:left;'
      .container
        = yield
    #footer
      .container
        = "Copyright &copy; 2010-#{Date.today.year}, Latreia, LLC"
